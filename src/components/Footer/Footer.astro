---
import { companyInfo, navLinks, socialLinks } from "../../config";
import { getNavWithBase, getFullPath } from "../../utils/url";

const currentYear = new Date().getFullYear();

// Get nav links with base prefix
const navLinksWithBase = getNavWithBase(navLinks);

const services = [
  { name: "Tư vấn pháp lý", href: getFullPath("/dich-vu#legal") },
  { name: "Thành lập doanh nghiệp", href: getFullPath("/dich-vu/thanh-lap-doanh-nghiep-von-viet-nam") },
  { name: "Kế toán thuế", href: getFullPath("/dich-vu#accounting") },
  { name: "Đầu tư", href: getFullPath("/dich-vu#investment") },
];
---

<footer class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <img src={getFullPath("/logo.svg")} alt="TV Legal Count Logo" class="h-8 w-auto" />
          <span class="text-xl font-bold">{companyInfo.name}</span>
        </div>
        <p class="text-gray-400 text-sm mb-4">
          {companyInfo.address}
        </p>
        <div class="space-y-2 text-sm">
          <p class="text-gray-400">
            <span class="font-medium">Điện thoại:</span>
            {companyInfo.phone}
          </p>
          <p class="text-gray-400">
            <span class="font-medium">Email:</span>
            {companyInfo.email}
          </p>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4">Liên kết nhanh</h3>
        <ul class="space-y-2">
          {
            navLinksWithBase.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white transition-colors duration-200"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4">Dịch vụ</h3>
        <ul class="space-y-2">
          {
            services.map((service) => (
              <li>
                <a
                  href={service.href}
                  class="text-gray-400 hover:text-white transition-colors duration-200"
                >
                  {service.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social Media -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4">Kết nối</h3>
        <div class="flex space-x-4">
          <a
            href={socialLinks.facebook}
            class="text-gray-400 hover:text-white transition-colors duration-200"
            aria-label="Facebook"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href={socialLinks.linkedin}
            class="text-gray-400 hover:text-white transition-colors duration-200"
            aria-label="LinkedIn"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
          <a
            href={socialLinks.twitter}
            class="text-gray-400 hover:text-white transition-colors duration-200"
            aria-label="Twitter"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t border-gray-800 text-center text-sm text-gray-400">
      <p>&copy; {currentYear} {companyInfo.name}. All rights reserved.</p>
    </div>
  </div>
</footer>
