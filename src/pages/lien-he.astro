---
import Layout from "../layouts/Layout.astro";
import { companyInfo } from "../config";

const contactInfo = [
  {
    title: "Địa chỉ",
    icon: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z",
    content: companyInfo.address,
  },
  {
    title: "Điện thoại",
    icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
    content: companyInfo.phone,
    href: `tel:${companyInfo.phone.replace(/[\s+]/g, "")}`,
  },
  {
    title: "Email",
    icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    content: companyInfo.email,
    href: `mailto:${companyInfo.email}`,
  },
  {
    title: "Giờ làm việc",
    icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    content: "Thứ 2 - Thứ 6: 8:00 - 18:00",
  },
];
---

<Layout title="Liên hệ - TV Legal Count">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-700 to-blue-800 text-white py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4 md:mb-6">Liên hệ với chúng tôi</h1>
        <p class="text-xl text-blue-100">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
      </div>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Thông tin liên hệ</h2>

          <div class="space-y-6 mb-8">
            {
              contactInfo.map((info) => (
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg
                      class="w-6 h-6 text-blue-700"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d={info.icon}
                      />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-1">{info.title}</h3>
                    {info.href ? (
                      <a
                        href={info.href}
                        class="text-gray-600 hover:text-blue-700 transition-colors"
                      >
                        {info.content}
                      </a>
                    ) : (
                      <p class="text-gray-600">{info.content}</p>
                    )}
                  </div>
                </div>
              ))
            }
          </div>

          <!-- Map placeholder -->
          <div class="bg-gray-200 rounded-lg h-64 flex items-center justify-center">
            <div class="text-center text-gray-500">
              <svg
                class="w-12 h-12 mx-auto mb-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                ></path>
              </svg>
              <p>Bản đồ</p>
              <p class="text-sm">(Thêm Google Maps embed)</p>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white p-8 rounded-lg shadow-lg border border-gray-100">
          <h2 class="text-2xl font-bold text-gray-900 mb-4 md:mb-6">Gửi tin nhắn cho chúng tôi</h2>

          <form class="space-y-6" method="POST" action="/api/lien-he">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Họ và tên
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
                placeholder="Nhập họ và tên của bạn"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
                placeholder="email@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Số điện thoại
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
                placeholder="+84 xxx xxx xxx"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                Dịch vụ quan tâm
              </label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
              >
                <option value="">Chọn dịch vụ</option>
                <option value="legal">Tư vấn pháp lý</option>
                <option value="startup">Thành lập doanh nghiệp</option>
                <option value="accounting">Kế toán & Thuế</option>
                <option value="investment">Tư vấn đầu tư</option>
                <option value="other">Khác</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Nội dung
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all resize-none"
                placeholder="Nhập nội dung tin nhắn..."></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-200"
            >
              Gửi tin nhắn
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
