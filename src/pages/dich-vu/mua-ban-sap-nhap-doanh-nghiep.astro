---
import PageLayout from "../../layouts/PageLayout.astro";

const service = {
  id: "ma-business",
  title: "Mua bán & Sáp nhập doanh nghiệp",
  icon: "M8 7h12m0 0l-4-4m4 4l-4-4m0 6H4m0 0l4-4m-4 4l4 4",
  description: "Hãy để chúng tôi là cánh tay đắc lực hỗ trợ bạn!",
  whatYouProvide: [
    "Thông tin về doanh nghiệp mục tiêu",
    "Ý định mua/sáp nhập cụ thể",
    "Giấy tờ pháp lý của doanh nghiệp",
    "Báo cáo tài chính (nếu có)",
    "Giấy ủy quyền",
  ],
  whatYouReceive: [
    "Thẩm định pháp lý doanh nghiệp mục tiêu",
    "Thẩm định tài chính",
    "Soạn thảo hợp đồng M&A",
    "Hỗ trợ đàm phán",
    "Thi hành thủ tục pháp lý",
    "Tư vấn miễn phí các vấn đề phát sinh",
  ],
  consulting: [
    "Tư vấn về loại hình M&A phù hợp",
    "Tư vấn về điều kiện pháp lý",
    "Tư vấn về thẩm định",
    "Tư vấn về đàm phán",
    "Tư vấn về thủ tục sau M&A",
    "Tư vấn miễn phí các vấn đề phát sinh",
  ],
};
---

<PageLayout
  title={service.title}
  icon={service.icon}
  description={service.description}
  heroBackground="/hero-service.jpg"
>
  <!-- Dịch vụ M&A -->
  <section class="py-8 md:py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-4 md:mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">DỊCH VỤ M&A CỦA CHÚNG TÔI</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-4 md:mb-6 md:mb-8">
          {
            [
              { title: "Soạn thảo", desc: "Soạn thảo hợp đồng thương mại" },
              { title: "Rà soát", desc: "Kiểm tra tính pháp lý, rủi ro" },
              { title: "Thẩm định", desc: "Đánh giá toàn diện doanh nghiệp" },
              { title: "Đàm phán", desc: "Hỗ trợ thương lượng hợp đồng" },
              { title: "Thi hành", desc: "Thi hành các thủ tục pháp lý" },
              { title: "Tư vấn", desc: "Tư vấn trọn gói sau M&A" },
            ].map((item) => (
              <div class="bg-white p-6 rounded-lg shadow">
                <h3 class="font-bold mb-2">{item.title}</h3>
                <p>{item.desc}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Quy trình M&A -->
  <section class="py-8 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-4 md:mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">QUY TRÌNH M&A</h2>
        </div>
        <div class="space-y-6">
          {
            [
              {
                step: "1",
                title: "Thẩm định giá",
                desc: "Đánh giá toàn diện doanh nghiệp mục tiêu",
                icon: "M9 7h12m0 0l-4-4m4 4l-4-4m0 6H4m0 0l4-4m-4 4l4 4",
              },
              {
                step: "2",
                title: "Soạn thảo hợp đồng",
                desc: "Soạn thảo hợp đồng M&A chi tiết",
                icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z",
              },
              {
                step: "3",
                title: "Đàm phán & Thông qua",
                desc: "Hỗ trợ đàm phán và thông qua M&A",
                icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 11h3m-3 4h2",
              },
              {
                step: "4",
                title: "Thi hành thủ tục",
                desc: "Hoàn tất thủ tục pháp lý cần thiết",
                icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
              },
            ].map((item) => (
              <div class="flex gap-6">
                <div class="flex-shrink-0 w-12 h-12 bg-blue-700 text-white rounded-full flex items-center justify-center font-bold">
                  {item.step}
                </div>
                <div class="flex-1 bg-white p-6 rounded-lg shadow">
                  <h3 class="text-xl font-bold mb-2">{item.title}</h3>
                  <p>{item.desc}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Khách hàng cần cung cấp -->
  <section class="py-8 md:py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4 md:mb-6">KHÁCH HÀNG CẦN CUNG CẤP</h2>
          <ul class="space-y-4">
            {
              service.whatYouProvide.map((item) => (
                <li class="flex items-start">
                  <svg
                    class="w-6 h-6 text-blue-700 mr-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0"
                    />
                  </svg>
                  <span>{item}</span>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Khách hàng sẽ nhận được -->
  <section class="py-8 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg border border-gray-100 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4 md:mb-6">KHÁCH HÀNG SẼ NHẬN ĐƯỢC</h2>
          <ul class="space-y-4">
            {
              service.whatYouReceive.map((item) => (
                <li class="flex items-start">
                  <svg
                    class="w-6 h-6 text-blue-700 mr-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span>{item}</span>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-8 md:py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-4 md:mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">MỘT SỐ CÂU HỎI THƯỜNG GẶP</h2>
          <p class="text-xl text-gray-600">Giải đáp những thắc mắc phổ biến về M&A doanh nghiệp</p>
        </div>
        <div class="space-y-4">
          {
            [
              {
                q: "M&A là gì?",
                a: "M&A (Mergers & Acquisitions) là thương vụ mua bán, sáp nhập doanh nghiệp thông qua việc mua lại phần vốn hoặc sáp nhập toàn bộ doanh nghiệp.",
              },
              {
                q: "Khi nào nên thực hiện M&A?",
                a: "Khi doanh nghiệp muốn mở rộng quy mô, thâm nhập thị trường mới, hoặc tiếp cận công nghệ, tài nguyên mà tự xây dựng từ đầu sẽ tốn kém thời gian và chi phí hơn.",
              },
              {
                q: "Quy trình M&A mất bao lâu?",
                a: "Tùy thuộc vào độ phức tạp của thương vụ. Thông thường từ 2-4 tháng cho thương vụ đơn giản, 6-12 tháng cho thương vụ phức tạp.",
              },
              {
                q: "Chi phí M&A bao gồm những gì?",
                a: "Chi phí bao gồm: phí thẩm định, phí tư vấn, phí soạn thảo hợp đồng, phí công chứng, phí đàm phán, và các chi phí liên quan đến thủ tục pháp lý.",
              },
              {
                q: "Có cần thông qua cổ đông không?",
                a: "Có, việc M&A thường phải được thông qua bởi Hội đồng quản trị hoặc Đại hội đồng cổ đông tùy thuộc trường hợp và quy định của doanh nghiệp.",
              },
            ].map((faq) => (
              <div class="bg-white rounded-lg shadow overflow-hidden">
                <details class="group">
                  <summary class="flex justify-between p-3 md:p-6 cursor-pointer bg-gray-50 hover:bg-gray-100">
                    <h3 class="font-semibold pr-4">{faq.q}</h3>
                    <svg
                      class="w-6 h-6 transform group-open:rotate-180"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"
                      />
                    </svg>
                  </summary>
                  <div class="p-3 md:p-6 border-t prose prose-sm" set:html={faq.a} />
                </details>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</PageLayout>
