    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8 md:mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Câu hỏi thường gặp</h2>
          <p class="text-xl text-gray-600">Giải đáp thắc mắc của quý khách hàng</p>
        </div>

        <div class="space-y-4">
          {
            faqs.map((faq, index) => (
              <details class="bg-white rounded-lg shadow-lg border border-gray-100 overflow-hidden group">
                <summary class="p-3 md:p-6 cursor-pointer flex items-center justify-between hover:bg-gray-50 transition-colors duration-200">
                  <span class="font-semibold text-gray-900 pr-4">{faq.question}</span>
                  <svg
                    class="w-5 h-5 text-gray-500 flex-shrink-0 group-open:rotate-180 transition-transform duration-200"
