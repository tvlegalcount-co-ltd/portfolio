---
import PageLayout from "../../layouts/PageLayout.astro";
import { getFullPath } from "../../utils/url";

const service = {
  id: "adjust-irc",
  title: "Điều chỉnh Giấy chứng nhận đăng ký đầu tư",
  icon: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z",
  description: "Thủ tục điều chỉnh, thay đổi nội dung Giấy chứng nhận đăng ký đầu tư (IRC)",
};

const cases = [
  "Thay đổi tên nhà đầu tư",
  "Thay đổi địa chỉ trụ sở của nhà đầu tư",
  "Thay đổi người đại diện theo pháp luật của nhà đầu tư",
  "Thay đổi nội dung dự án đầu tư",
  "Thay đổi vốn đầu tư",
